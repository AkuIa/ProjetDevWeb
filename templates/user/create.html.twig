{% extends 'base.html.twig' %}
{% block title %}{{ 'Inscription'|trans }}{% endblock %}
{% block body %}
       <div class="inscription">
              <h1>{{ 'Inscription'|trans }}</h1>
              {{ form_start(form) }}
              {{ form_widget(form) }}
              <div class="form-group">
                     <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">{{ "S'inscrire"|trans}}</button>
                     </div>
              </div>
                {% if error is defined %}
                    <p>{{ error }}</p>
                {% endif %}
       </div>  
    {{ form_end(form) }}
{% endblock %}