<!DOCTYPE html>
<html id="html">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}">
        <script type="text/javascript" src="{{ asset('js/script.js') }}"></script>
    </head>
    <body>
        <div class="navbar">
            <h1>Crypto.fr</h1>
            <ul>
                <li><a href="{{ path('crypto') }}">Accueil</a></li>
                <li><a href="{{ path('crypto.list') }}">Les cryptos</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
            <div class="btn">
                <a class="bouton" type="button" href="{{ path('user.create') }}">
                    <p class="text-bouton">Se Connecter / S'incrire</p>
                </a>
            </div>
        </div>
        {% block body %}{% endblock %}
    </body>
</html>
