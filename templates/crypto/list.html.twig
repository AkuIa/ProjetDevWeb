{% extends 'base.html.twig' %}
{% block title %}Liste des cryptos{% endblock %}
{% block body %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/stupidtable/1.1.3/stupidtable.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <div class="container">
        <table class="list" id="list">
            <thead>
                <tr>
                    <th data-sort="string"><i class="fa fa-sort"></i> {{ 'Nom'|trans }}</th>
                    <th data-sort="string"><i class="fa fa-sort"></i> {{ 'Devise'|trans }}</th>
                    <th data-sort="int"><i class="fa fa-sort"></i> {{ 'Prix'|trans }}</th>
                    <th data-sort="int"><i class="fa fa-sort"></i> {{ 'Capitalisation'|trans }}</th>
                    <th data-sort="int"><i class="fa fa-sort"></i> {{ 'Quantit√©'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for crypto in cryptos %}
                <tr>
                    <td><a href="{{ path('crypto.detail', {devise: crypto.devise}) }}">{{ crypto.nom }}</a></td>
                    <td>{{ crypto.devise }}</td>
                    <td>{{ crypto.prix }}</td>
                    <td>{{ crypto.capitalisation }}</td>
                    <td>{{ crypto.quantite }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <script>
        $(document).ready(function($) { 
            $("#list").stupidtable();
           }); 
    </script> 
{% endblock %}

